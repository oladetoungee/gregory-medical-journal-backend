{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "blocks",
      "required": true
    },
    "editorPick": {
      "type": "boolean",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "document": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ]
    },
    "submissionDate": {
      "type": "datetime",
      "required": true
    },
    "submittedByName": {
      "type": "string"
    },
    "submittedByEmail": {
      "type": "email"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "submitted",
        "under review",
        "accepted",
        "rejected",
        "approved"
      ],
      "required": true,
      "default": "submitted"
    },
    "Authors": {
      "type": "json",
      "required": true
    }
  }
}
